<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cblProfileDisplay">

    <LinearLayout
        android:id="@+id/cbl_top"
        android:layout_width="458dp"
        android:layout_height="85dp"
        android:background="#FF6200EE"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cbl_back"
            android:layout_width="55dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/cbl_back" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cbl_header"
        android:layout_width="611dp"
        android:layout_height="211dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_top"
        app:srcCompat="@drawable/header" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cbl_profile"
        android:layout_width="143dp"
        android:layout_height="141dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_top">

        <ImageView
            android:id="@+id/cbl_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:textAlignment="center"
            app:srcCompat="@drawable/profilepic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cbl_namedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Name"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_profile" />

    <TextView
        android:id="@+id/cbl_userdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="/@userhandle"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_namedisplay" />

    <TextView
        android:id="@+id/cbl_agedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Age: 0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_userdisplay" />

    <TextView
        android:id="@+id/cbl_emaildisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="email.display@mail.com"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbl_agedisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>